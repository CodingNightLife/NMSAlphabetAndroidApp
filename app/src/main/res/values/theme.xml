<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    // Theme 1
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryTheme1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTheme1</item>
        <item name="colorAccent">@color/colorAccentTheme1</item>
        <item name="android:windowBackground">?colorPrimary</item>
    </style>
    <style name="AppTheme1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
    </style>
    <style name="AppTheme1.NoActionBar.Transparent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme1.NoActionBar.Transparent.AccentBg">
        <item name="android:windowBackground">?colorAccent</item>
    </style>

